# SIEM Integration Configuration Example
# Copy to .env and configure

# ===== Splunk HEC =====
SPLUNK_ENABLED=true
SPLUNK_HEC_URL=https://splunk.company.com:8088
SPLUNK_HEC_TOKEN=your-hec-token-here
SPLUNK_INDEX=security
SPLUNK_SOURCE=open-ndr
SPLUNK_SOURCETYPE=ndr:alert
SPLUNK_BATCH_SIZE=100
SPLUNK_FLUSH_INTERVAL=5000

# ===== Elasticsearch (Elastic Cloud or self-hosted) =====
ELASTIC_ENABLED=true
ELASTIC_URL=https://elastic.company.com:9200
ELASTIC_API_KEY=your-api-key-here
ELASTIC_INDEX=ndr-alerts
ELASTIC_BATCH_SIZE=100
ELASTIC_FLUSH_INTERVAL=5000

# ===== Syslog =====
SYSLOG_ENABLED=true
SYSLOG_HOST=syslog.company.com
SYSLOG_PORT=514
SYSLOG_PROTOCOL=tcp  # tcp, udp, or tls
SYSLOG_FACILITY=local0

# ===== Webhooks =====
# Webhook 1 (e.g., Slack)
WEBHOOK_1_ENABLED=true
WEBHOOK_1_NAME=slack-security
WEBHOOK_1_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
WEBHOOK_1_FILTER_SEVERITY=critical,high
WEBHOOK_1_HEADER_1_NAME=Content-Type
WEBHOOK_1_HEADER_1_VALUE=application/json

# Webhook 2 (e.g., custom SIEM)
WEBHOOK_2_ENABLED=false
WEBHOOK_2_NAME=custom-siem
WEBHOOK_2_URL=https://custom-siem.com/api/events
WEBHOOK_2_HEADER_1_NAME=Authorization
WEBHOOK_2_HEADER_1_VALUE=Bearer your-token-here
