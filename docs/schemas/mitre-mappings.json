  "detection_rules": {
    "powershell_execution": {
      "mitre_mapping": {
        "tactic": "TA0002",
        "technique": "T1059",
        "sub_technique": "T1059.001"
      },
      "rule": {
        "title": "PowerShell Execution Detected",
        "description": "Detects PowerShell process execution",
        "query": "process.name:powershell.exe OR process.name:pwsh.exe"
      }
    },
    "suspicious_network_connection": {
      "mitre_mapping": {
        "tactic": "TA0011",
        "technique": "T1105"
      },
      "rule": {
        "title": "Suspicious Network Connection",
        "description": "Detects suspicious outbound network connections",
        "query": "network.direction:outbound AND destination.port:(4444 OR 6666 OR 8080)"
      }
    },
    "file_encryption_activity": {
      "mitre_mapping": {
        "tactic": "TA0040",
        "technique": "T1486"
      },
      "rule": {
        "title": "File Encryption Activity",
        "description": "Detects potential ransomware file encryption",
        "query": "file.extension:(.encrypted OR .locked OR .crypto) OR event.action:(file_rename AND file.name:*crypt*)"
      }
    },
    "rdp_brute_force": {
      "mitre_mapping": {
        "tactic": "TA0008",
        "technique": "T1021",
        "sub_technique": "T1021.001"
      },
      "rule": {
        "title": "RDP Brute Force Attack",
        "description": "Detects potential RDP brute force attacks",
        "query": "event.type:authentication AND event.outcome:failure AND destination.port:3389",
        "threshold": {
          "field": "source.ip",
          "value": 10,
          "timeframe": "5m"
        }
      }
    }
  }
}